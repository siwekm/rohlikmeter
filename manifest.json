{
    "manifest_version": 3,
    "name": "Rohlik Meter",
    "description": "Rohl√≠k Stats Extension",
    "version": "1.0",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
      ],
    "host_permissions": [
        "https://www.rohlik.cz/*"
    ],

    "web_accessible_resources": [
        {
            "resources": ["*.html", "*.js"],
            "matches": ["<all_urls>"]
        }
    ]
}

