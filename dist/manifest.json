{
    "manifest_version": 3,
    "name": "Rohlik Meter",
    "description": "Rohl√≠k Stats Extension",
    "version": "1.0",
    "background": {
        "service_worker": "js/index.js"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
      ],
    "host_permissions": [
        "https://www.rohlik.cz/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["*.html", "*.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_title": "Show Rohlik statistics."
    }
}

