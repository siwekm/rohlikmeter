{
    "manifest_version": 3,
    "name": "Rohlik Meter",
    "description": "Rohl√≠k Stats Extension",
    "version": "1.0",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
      ],
    "host_permissions": [
        "https://www.rohlik.cz/*"
    ],
    "content_scripts": [
        {
          "js": [
            "js/index.js",
            "js/stats.js"
          ],
          "matches": [
            "https://rohlik.cz/*"
          ]
        }
      ]
}

